---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="404 - Page not found">
  <div class="flex min-h-screen items-center justify-center bg-muted">
    <div class="text-center">
      <h1 class="mb-4 text-4xl font-bold">404</h1>
      <p class="mb-4 text-xl text-muted-foreground">Oops! Page not found</p>
      <a href={import.meta.env.BASE_URL} class="text-primary underline hover:text-primary/90">
        Return to Home
      </a>
    </div>
  </div>
</BaseLayout>
